<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/item_photo_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/purple_500"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/item_photo_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="@{photo.title}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/item_photo_fav_state_image"
            app:layout_constraintStart_toEndOf="@id/item_photo_image"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/item_photo_fav_state_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@{photo.isFavorite?@drawable/ic_fav_full:@drawable/ic_fav_empty}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <data>

        <variable
            name="photo"
            type="com.example.reviewapp.features.welcome.ui.model.PhotoUI" />
    </data>
</layout>